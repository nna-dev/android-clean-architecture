<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/category_icon"
        android:layout_width="@dimen/explorer_categories_icon_size"
        android:layout_height="@dimen/explorer_categories_icon_size"
        android:layout_gravity="center_horizontal"
        android:background="@color/home_podcast_item_badge"
        android:src="@drawable/ic_my_podcasts_simple"
        android:tint="@color/white"/>

    <TextView
        android:id="@+id/category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_spacing"
        android:text="@string/explorer_categories_podcast" />
</LinearLayout>