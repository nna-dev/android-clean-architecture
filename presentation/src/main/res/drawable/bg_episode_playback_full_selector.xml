<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item android:height="24dp" android:width="24dp">
                <shape android:shape="oval">
                    <solid android:color="?attr/colorAccent"/>
                </shape>
            </item>
            <item android:gravity="center" android:height="10dp" android:width="10dp" android:drawable="@drawable/ic_media_pause"/>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:height="24dp" android:width="24dp">
                <shape android:shape="oval">
                    <stroke android:width="1dp" android:color="?attr/colorAccent"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_play_inner_padding"/>
        </layer-list>
    </item>
</selector>
